@model SuperMarket.ViewModels.ProductFormViewModel
@{
    ViewBag.Title = "ProductForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ProductForm</h2>

@using (Html.BeginForm("Save", "Products"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Product.Name)
        @Html.TextBoxFor(m => m.Product.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Product.Price)
        @Html.TextBoxFor(m => m.Product.Price, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Product.NumberInStock)
        @Html.TextBoxFor(m => m.Product.NumberInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Product.Id)
    @Html.HiddenFor(m => m.Category.Id,new { id="categoryId"})
   
    @Html.HiddenFor(m => m.Product.CategoryId,new { id="productCategoryId"})
   


    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts{
    <script>
        $(document).ready(function () {
            $("#productCategoryId").val($("#categoryId").val());
           
        });
    </script>
    
    }